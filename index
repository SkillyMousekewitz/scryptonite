<body id="body">

    <div id="auth-overlay">
        <div class="card p-5 shadow-lg text-center" style="width: 400px; border-radius: 20px;">
            <h1 style="font-weight: 800; letter-spacing: -1px;">SCRYPT<span style="color:var(--accent)">ONITE</span></h1>
            <p class="text-muted mb-4">Focus-driven screenwriting.</p>
            <button id="login-btn" class="btn btn-dark w-100 py-3 mb-2">Sign in with Google</button>
        </div>
    </div>

    <div id="tutorial-overlay" style="display:none;">
        <div class="card p-4 shadow-lg bg-dark text-white" style="max-width: 450px;">
            <h4>Welcome to Scryptonite</h4>
            <hr>
            <p><strong>Tab:</strong> Change line type</p>
            <p><strong>Enter:</strong> Smart break</p>
            <p><strong>Ctrl + \ :</strong> Focus Mode</p>
            <p><strong>Ctrl + Shift + N:</strong> Add Note</p>
            <button class="btn btn-info w-100 mt-3" onclick="closeTutorial()">Start Writing</button>
        </div>
    </div>

    <div id="sidebar">
        <h6 class="mb-3" style="letter-spacing: 2px; color: #555;">SCENES</h6>
        <div id="scene-list" class="flex-grow-1 overflow-auto mb-3"></div>
        
        <h6 class="mb-2" style="letter-spacing: 2px; color: #555;">STATS</h6>
        <div class="mb-4 small">
            <div>Words: <span id="stat-words">0</span></div>
            <div>Runtime: <span id="stat-time">0m 0s</span></div>
        </div>

        <div class="d-grid gap-2 mb-4">
            <button class="btn btn-outline-secondary btn-sm" onclick="toggleDarkMode()">Theme</button>
            <button class="btn btn-outline-secondary btn-sm" onclick="toggleFocusMode()">Focus Mode</button>
            <button class="btn btn-outline-warning btn-sm" onclick="saveVersion()">Snapshot</button>
            <button class="btn btn-outline-info btn-sm" onclick="showVersionHistory()">History</button>
            <button class="btn btn-success btn-sm" onclick="exportToPDF()">PDF</button>
            <button class="btn btn-info btn-sm" onclick="exportToFountain()">Fountain</button>
            <button class="btn btn-link btn-sm text-danger mt-3" onclick="signOutUser()">Sign Out</button>
        </div>
    </div>

    <div id="main-editor">
        <div id="script-container" contenteditable="true" spellcheck="true">
            <div class="line scene-heading" data-type="scene-heading">INT. NEW PROJECT - DAY</div>
            <div class="line action" data-type="action">Begin your masterpiece...</div>
        </div>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-app.js";
        import { getFirestore, doc, setDoc, onSnapshot, collection, addDoc, query, orderBy, getDocs } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js";
        import { getAuth, signInWithPopup, GoogleAuthProvider, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.0/firebase-auth.js";

        // --- REPLACE WITH YOUR FIREBASE CONFIG ---
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_PROJECT.firebaseapp.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_PROJECT.appspot.com",
            messagingSenderId: "YOUR_SENDER_ID",
            appId: "YOUR_APP_ID"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);
        const provider = new GoogleAuthProvider();
        let currentUser = null;
        const container = document.getElementById('script-container');
        const elements = ["scene-heading", "action", "character", "parenthetical", "dialogue", "transition"];

        // --- AUTH & INITIALIZATION ---
        document.getElementById('login-btn').onclick = () => signInWithPopup(auth, provider);
        window.signOutUser = () => signOut(auth);

        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                document.getElementById('auth-overlay').style.display = 'none';
                checkTutorial();
                startSync(user.uid);
            } else {
                document.getElementById('auth-overlay').style.display = 'flex';
            }
        });

        // --- KEYBOARD ENGINE ---
        container.addEventListener('keydown', (e) => {
            const sel = window.getSelection();
            const line = sel.anchorNode.parentElement.closest('.line');
            if (!line) return;

            if (e.key === 'Tab') {
                e.preventDefault();
                let idx = elements.indexOf(line.dataset.type);
                idx = e.shiftKey ? (idx - 1 + elements.length) % elements.length : (idx + 1) % elements.length;
                line.className = `line ${elements[idx]}`;
                line.dataset.type = elements[idx];
                updateNavigator();
            }

            if (e.key === 'Enter') {
                e.preventDefault();
                const currentType = line.dataset.type;
                const nextType = { "character": "dialogue", "scene-heading": "action", "dialogue": "action", "parenthetical": "dialogue" }[currentType] || "action";
                const newLine = document.createElement('div');
                newLine.className = `line ${nextType}`;
                newLine.dataset.type = nextType;
                line.after(newLine);
                const range = document.createRange();
                range.setStart(newLine, 0);
                range.collapse(true);
                sel.removeAllRanges();
                sel.addRange(range);
            }

            if (e.ctrlKey && e.key === '\\') toggleFocusMode();
            if (e.ctrlKey && e.shiftKey && e.key === 'N') insertNote(line);
        });

        container.addEventListener('input', () => {
            autoCapitalize();
            updateStats();
            saveToCloud();
        });

        // --- FUNCTIONS ---
        function autoCapitalize() {
            const sel = window.getSelection();
            const line = sel.anchorNode.parentElement.closest('.line');
            if (line && (line.dataset.type === 'character' || line.dataset.type === 'scene-heading')) {
                const pos = sel.anchorOffset;
                line.innerText = line.innerText.toUpperCase();
                const range = document.createRange();
                range.setStart(line.firstChild || line, pos);
                range.collapse(true);
                sel.removeAllRanges();
                sel.addRange(range);
            }
        }

        function updateNavigator() {
            const list = document.getElementById('scene-list');
            list.innerHTML = "";
            container.querySelectorAll('.scene-heading').forEach((s, i) => {
                s.id = `scene-${i}`;
                const item = document.createElement('div');
                item.className = 'nav-item mb-1';
                item.innerText = s.innerText || "NEW SCENE";
                item.onclick = () => s.scrollIntoView({ behavior: 'smooth' });
                list.appendChild(item);
            });
        }

        window.toggleDarkMode = () => document.body.classList.toggle('dark-mode');
        window.toggleFocusMode = () => document.body.classList.toggle('focus-mode');

        window.saveVersion = async () => {
            const name = prompt("Name this snapshot:");
            if (!name) return;
            await addDoc(collection(db, "scripts", currentUser.uid, "snapshots"), {
                name, content: container.innerHTML, timestamp: new Date()
            });
            alert("Snapshot saved!");
        };

        window.showVersionHistory = async () => {
            const q = query(collection(db, "scripts", currentUser.uid, "snapshots"), orderBy("timestamp", "desc"));
            const snap = await getDocs(q);
            let html = "<h6>HISTORY</h6>";
            snap.forEach(doc => {
                html += `<div class="nav-item mb-2" onclick="loadVersion('${doc.id}')">${doc.data().name}<br><small>${doc.data().timestamp.toDate().toLocaleDateString()}</small></div>`;
            });
            document.getElementById('scene-list').innerHTML = html;
        };

        window.exportToPDF = () => {
            const opt = { margin: [1, 1, 1, 1.5], filename: 'script.pdf', jsPDF: { unit: 'in', format: 'letter' } };
            html2pdf().set(opt).from(container).save();
        };

        function insertNote(line) {
            const note = document.createElement('div');
            note.className = 'script-note';
            note.contentEditable = true;
            note.innerText = "[ NOTE: New reminder ]";
            line.after(note);
        }

        function updateStats() {
            const words = container.innerText.trim().split(/\s+/).length;
            const pages = container.scrollHeight / 1056;
            document.getElementById('stat-words').innerText = words;
            document.getElementById('stat-time').innerText = `${Math.floor(pages)}m ${Math.round((pages % 1) * 60)}s`;
        }

        async function saveToCloud() { if (currentUser) await setDoc(doc(db, "scripts", currentUser.uid), { content: container.innerHTML }, { merge: true }); }
        function startSync(uid) {
            onSnapshot(doc(db, "scripts", uid), (doc) => {
                if (doc.exists() && document.activeElement !== container) {
                    container.innerHTML = doc.data().content;
                    updateNavigator();
                    updateStats();
                }
            });
        }

        function checkTutorial() { if (!localStorage.getItem('scryptonite_tutorial')) document.getElementById('tutorial-overlay').style.display = 'flex'; }
        window.closeTutorial = () => { document.getElementById('tutorial-overlay').style.display = 'none'; localStorage.setItem('scryptonite_tutorial', 'true'); };
    </script>
</body>
</html>
